@model IEnumerable<Electronic_Bank.Models.Client>

@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
<div class="card">
    <div class="card-body">
        <h4 class="display-2">Clients</h4>
        <br />
        <p>
            <a class="btn btn-secondary btn-rounded btn-fw" asp-action="Create">Create New</a>
            <form asp-controller="Clients" asp-action="Index" method="get" class="d-flex">
            <p>
                <input type="text" name="searchString" placeholder="Search Name" class="form-control me-sm-2"/>
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </p>
            </form>
            
        </p>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>    
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        <img src="~/imgs/@Html.DisplayFor(modelItem => item.ImagePath)" width="70" class="img-thumbnail rounded-circle" alt="@Html.DisplayFor(modelItem => item.ImagePath)"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
</div>