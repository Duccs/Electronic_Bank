@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid page-body-wrapper full-page-wrapper">     
    <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-8 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <h4>Hello! let's get started</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
            <form class="pt-3" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control form-control-lg"  placeholder="Username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <button id="login-submit" type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                            <input  type="checkbox" class="form-check-input" asp-for="Input.RememberMe" />
                            Keep me signed in
                        </label>
                    </div>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Don't have an account? <a asp-area="Identity" asp-page="/Account/Register" class="text-primary">Create</a>
                </div>
            </form>
        </div>
        </div>
    </div>
    </div>
</div>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
